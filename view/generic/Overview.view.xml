<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View
    controllerName="com.giorgia.provaUI5.controller.generic.Overview"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    class="viewPadding">

    <Page showNavButton="true"
    navButtonPress="handleNavButtonPress"
    title="{labels>genericOverviewPageTitle}"
    titleLevel="H1">


        <Panel expandable="true"
            expanded="true"
            headerText="{labels>overview.summary.title}"
            width="auto"
            class="sapUiResponsiveMargin">
            <content>
                <FormattedText htmlText="{app>/applicationGuide/applicationSummary}"/>
            </content>
        </Panel>
        <Panel expandable="true"
            expanded="false"
            headerText="{labels>overview.masterPage.title}"
            width="auto"
            class="sapUiResponsiveMargin">
            <content>
                <FormattedText htmlText="{app>/applicationGuide/masterPageManagment}"/>
            </content>
        </Panel>
        <Panel expandable="true"
            expanded="false"
            headerText="{labels>overview.singlePage.title}"
            width="auto"
            class="sapUiResponsiveMargin">
            <content>
                <FormattedText htmlText="{app>/applicationGuide/singlePageManagment}"/>
            </content>
        </Panel>

        <Panel expandable="true"
            expanded="false"
            headerText="{labels>overview.personalArea.title}"
            width="auto"
            class="sapUiResponsiveMargin">
            <content>
                <FormattedText htmlText="{app>/applicationGuide/personalArea}"/>
            </content>

        </Panel>
    </Page>

</mvc:View>
