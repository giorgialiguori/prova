<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View
    controllerName="com.giorgia.provaUI5.controller.generic.Operator"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:vk="sap.ui.vk"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:vbm="sap.ui.vbm"
    class="viewPadding">

    <Page showNavButton="true"
    navButtonPress="handleNavButtonPress"
    titleLevel="H1">


<Panel>
    <List>
      <CustomListItem>
  			<HBox class="sapUiSmallMarginTop sapUiSmallMarginBottom sapUiSmallMarginBegin">
  				<Image src="images.png"
  						decorative="false"
  						width="200px"

  						densityAware="true">
  					<detailBox>
  						<LightBox>
  							<LightBoxItem
  									imageSrc="images.png"
  									alt="OpenUI5"
  									title="framework di applicazioni JavaScript">
  							</LightBoxItem>
  						</LightBox>
  					</detailBox>
  					<!-- Fixes Hbox layout on Android Stock Browser for Android 5.0 -->
  					<layoutData>
  						<FlexItemData growFactor="1" shrinkFactor="0"/>
  					</layoutData>
  				</Image>
  				<VBox class="sapUiSmallMarginBegin">
            <Title text="OpenUI5" />
            <Text text="OpenUI5 è un framework di applicazioni JavaScript progettato per
              creare applicazioni multipiattaforma, reattive e pronte per l'azienda. È un progetto open source
              gestito da SAP SE disponibile con licenza Apache 2.0 e aperto a contribut"/>
  				</VBox>
  			</HBox>
  		</CustomListItem>



      <CustomListItem>
        <HBox class="sapUiSmallMarginTop sapUiSmallMarginBottom sapUiSmallMarginBegin">
          <Image src="icon-normal.png"
              decorative="true"
              width="200px"
              densityAware="false">
            <detailBox>
              <LightBox>
                <LightBoxItem

                    imageSrc="icon-normal.png"
                    alt="Poema"
                    title="Azienda">
                </LightBoxItem>
              </LightBox>
            </detailBox>
            <!-- Fixes Hbox layout on Android Stock Browser for Android 5.0 -->
            <layoutData>
              <FlexItemData growFactor="1" shrinkFactor="0"/>
            </layoutData>
          </Image>
          <VBox class="sapUiSmallMarginBegin">
            <Title text="Poema"/>
        <Text text="Fondata nel 2001 da un gruppo di professionisti con rimarchevole profilo accademico
             e con pluriennale esperienza maturata in primarie società internazionali di consulenza, POEMA srl,
             ha in breve tempo acquisito un ruolo di partner privilegiato per primarie società in settori
             industriali particolarmente competitivi, che hanno deciso di utilizzare le
           soluzioni SAP per coprire in parte o in toto i propri fabbisogni di integrazione IT."/>
          </VBox>
        </HBox>
      </CustomListItem>
    </List>
    </Panel>


    <!--Panel
        expandable="true"
        expanded="true"
        width="auto"
        class="sapUiResponsiveMargin">
        <headerToolbar>
					<Toolbar>
						<Title text="Descrizione" />
					</Toolbar>
				</headerToolbar>
        <content>
          <VBox class="sapUiTinyMargin">
      						<Text text="The Map Container"/>
      					</VBox>

        </content>

    </Panel-->

  </Page>



</mvc:View>
