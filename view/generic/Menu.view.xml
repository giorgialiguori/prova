<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View
	height="100%"
	controllerName="com.giorgia.provaUI5.controller.generic.Menu"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
	class="viewPadding">

	<Page
        showNavButton="true"
        navButtonPress="handleNavButtonPress"
        class="sapUiContentPadding"
		title="{labels>mainPageTitle}"
		titleLevel="H1">
		<TileContainer
			id="container"
			tiles="{app>/operationMenu}">
			<StandardTile
				icon="{app>icon}"
				type="{app>type}"
				number="{app>number}"
				numberUnit="{app>numberUnit}"
				title="{app>title}"
				info="{app>info}"
				infoState="{app>infoState}"
				press="handleTilePress"/>
		</TileContainer>
	</Page>

</mvc:View>
